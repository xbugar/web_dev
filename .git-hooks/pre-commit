#!/bin/sh

# Detect staged files
STAGED=$(git diff --cached --name-only)

# Only run frontend lint if frontend files are staged
echo "$STAGED" | grep '^frontend/' > /dev/null
if [ $? -eq 0 ]; then
  echo "ğŸ” Running lint-staged in frontend..."
  cd frontend
  npx lint-staged
  if [ $? -ne 0 ]; then
    echo "âŒ Frontend lint failed. Commit aborted."
    exit 1
  fi
fi

exit 0
