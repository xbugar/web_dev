  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "devdb:up": "cp .env.example .env; docker compose -f docker-compose.postgres.yml up -d && npx prisma migrate dev --name pb138 && npx prisma generate",
    "devdb:down": "docker compose -f docker-compose.postgres.yml down --remove-orphans",
    "deploy:up": "docker compose -f docker-compose.yml up --build -d",
    "deploy:down": "docker compose -f docker-compose.yml down --remove-orphans",
    "dev": "ts-node index.ts",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate && npx prisma db seed",
    "test": "vitest --config vitest.config.integration.ts ",
    "test:ui": "vitest -c vitest.config.integration.ts --ui"
  }
