{
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "express": "^5.1.0",
    "node": "^18.20.8",
    "tsc": "^2.0.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/node": "^22.13.14",
    "git-conventional-commits": "^2.8.0",
    "prisma": "^6.6.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "database": "cp .env.example .env; docker compose -f docker-compose.postgres.yml up -d && npx prisma db push",
    "deploy:up": "docker compose -f docker-compose.yml up --build -d",
    "deploy:down": "docker compose -f docker-compose.yml down --remove-orphans",
    "dev": "node index.js",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate"
  }
}
