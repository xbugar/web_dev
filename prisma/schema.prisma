generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id @default(autoincrement())
  username String @db.VarChar(31)
  email    String @unique

  isAdmin        Boolean @default(false)
  hashedPassword String
  passwordSalt   String

  profilePicture   ProfilePicture @relation(fields: [profilePictureId], references: [profilePictureId])
  profilePictureId Int
  notebooks        Notebook[]
  calendar         Calendar?
  flashDecks       FlashDeck[]
}

model ProfilePicture {
  profilePictureId Int    @id @default(autoincrement())
  picture          Bytes
  users            User[]
}

model Notebook {
  notebookId Int @id @default(autoincrement())

  title String   @db.VarChar(127)
  color String?
  tags  String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner      User        @relation(fields: [ownerId], references: [userId])
  ownerId    Int
  icon       Icon        @relation(fields: [iconId], references: [iconId])
  iconId     Int
  notes      Note[]
  flashDecks FlashDeck[]
}

model Note {
  noteId Int @id @default(autoincrement())

  title   String   @db.VarChar(127)
  content String   @default("")
  tags    String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notebook   Notebook @relation(fields: [notebookId], references: [notebookId])
  notebookId Int
}

model Calendar {
  calendarId Int @id @default(autoincrement())

  title String  @db.VarChar(127)
  color String?

  user   User    @relation(fields: [userId], references: [userId])
  userId Int     @unique
  events Event[]
}

model Event {
  eventId Int @id @default(autoincrement())

  title       String   @db.VarChar(127)
  description String   @default("") @db.VarChar(511)
  tags        String[]
  color       String?

  calendar   Calendar    @relation(fields: [calendarId], references: [calendarId])
  calendarId Int
  eventTimes EventTime[]
}

model EventTime {
  eventTimeId Int @id @default(autoincrement())

  date       DateTime
  start_time DateTime
  end_time   DateTime

  event   Event @relation(fields: [eventId], references: [eventId])
  eventId Int
}

model FlashDeck {
  flashDeckId Int @id @default(autoincrement())

  title       String
  description String   @default("")
  color       String?
  tags        String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [userId])
  userId     Int
  icon       Icon        @relation(fields: [iconId], references: [iconId])
  iconId     Int
  notebook   Notebook?   @relation(fields: [notebookId], references: [notebookId])
  notebookId Int?
  flashCards FlashCard[]
}

model FlashCard {
  flashCardId Int @id @default(autoincrement())

  question String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  alashDeck   FlashDeck         @relation(fields: [flashDeckId], references: [flashDeckId])
  flashDeckId Int
  answers     FlashCardAnswer[]
}

model FlashCardAnswer {
  answerId Int @id @default(autoincrement())

  answer    String  @default("")
  isCorrect Boolean @default(false)

  flashCard   FlashCard @relation(fields: [flashCardId], references: [flashCardId])
  flashCardId Int
}

model Icon {
  iconId Int   @id @default(autoincrement())
  icon   Bytes

  notebooks  Notebook[]
  flashDecks FlashDeck[]
}
