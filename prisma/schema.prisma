generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id @default(autoincrement())
  username String @db.VarChar(31)
  email    String @unique

  hashedPassword String
  passwordSalt   String
  profilePicture Bytes?

  Notebooks  Notebook[]
  Calendar   Calendar?
  FlashDecks FlashDeck[]
}

model Admin {
  adminId Int    @id @default(autoincrement())
  email   String @unique

  name            String
  hashedPassword String
  passwordSalt   String
}

model Notebook {
  notebookId Int @id @default(autoincrement())

  title String   @db.VarChar(127)
  icon  Bytes?
  color String?
  tags  String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User @relation(fields: [ownerId], references: [userId])
  ownerId Int

  Notes      Note[]
  FlashDecks FlashDeck[]
}

model Note {
  noteId Int @id @default(autoincrement())

  title   String   @db.VarChar(127)
  content String   @default("")
  tags    String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notebook   Notebook @relation(fields: [notebookId], references: [notebookId])
  notebookId Int
}

model Calendar {
  calendarId Int @id @default(autoincrement())

  title String  @db.VarChar(127)
  color String?

  user   User    @relation(fields: [userId], references: [userId])
  userId Int     @unique
  Events Event[]
}

model Event {
  eventId Int @id @default(autoincrement())

  title       String   @db.VarChar(127)
  description String   @default("") @db.VarChar(511)
  tags        String[]
  color       String?

  calendar   Calendar    @relation(fields: [calendarId], references: [calendarId])
  calendarId Int
  EventTimes EventTime[]
}

model EventTime {
  eventTimeId Int @id @default(autoincrement())

  date       DateTime
  start_time DateTime
  end_time   DateTime
  repeats    Repeat?

  event   Event @relation(fields: [eventId], references: [eventId])
  eventId Int
}

enum Repeat {
  DAY
  WEAK
  MONTH
}

model FlashDeck {
  flashDeckId Int @id @default(autoincrement())

  title       String
  description String   @default("")
  color       String?
  icon        Bytes?
  tags        String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [userId])
  userId     Int
  notebook   Notebook?   @relation(fields: [notebookId], references: [notebookId])
  notebookId Int?
  FlashCards FlashCard[]
}

model FlashCard {
  flashCardId Int @id @default(autoincrement())

  question String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  flashDeck   FlashDeck         @relation(fields: [flashDeckId], references: [flashDeckId])
  flashDeckId Int
  Answers     FlashCardAnswer[]
}

model FlashCardAnswer {
  answerId Int @id @default(autoincrement())

  answer    String  @default("")
  isCorrect Boolean @default(false)

  flashCard   FlashCard @relation(fields: [flashCardId], references: [flashCardId])
  flashCardId Int
}
